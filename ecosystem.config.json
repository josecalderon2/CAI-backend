{
  "apps": [
    {
      "name": "cai-backend",
      "script": "dist/main.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "watch": false,
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "error_file": "logs/error.log",
      "out_file": "logs/out.log"
    }
  ]
}